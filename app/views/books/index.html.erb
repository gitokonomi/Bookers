<!--削除成功時のフラッシュメッセージ-->
<div>
  <%= flash[:notice] %>
<div>


<h1>Books</h1>

<!--一覧-->
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show" , book_path(book.id) %></td>
			<td><%= link_to "Edit" , edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<!--新規-->
<h2>New book</h2>


<!--エラー表示-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model:@book do |f| %>

	<div class = field>
		<%= f.label :Title %><br/>
	<%= f.text_field :title %><br/>
	</div>

	<div class = field>
		<%= f.label :Body %><br/>
	<%= f.text_area :body %>
	</div>

	<div class = actions>
		<%= f.submit 'Create Book' %>
	</div>
<% end %>
