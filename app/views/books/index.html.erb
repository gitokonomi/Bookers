<h1>Books</h1>

<!--コピペ-->
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% Book.all .each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show" , book_path(book.id) %></td>
			<td><%= "edit" %></td>
			<td><%= "destroy" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<!--コピペその２-->
<h3>New book</h3>

<%= form_for(@book) do |f| %>

	<%= f.label :Title %><br/>
	<%= f.text_field :title %><br/>

	<%= f.label :Body %><br/>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %></br>

<% end %>
